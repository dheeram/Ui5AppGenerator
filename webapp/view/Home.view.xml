<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="myApps.AppGenerator.controller.Home">
<Page title="{i18n>title}">
    <headerContent>
        <Button 
            text="TimeCalc"
            class="sapUiTinyMargin"
            press="onOpenDlg('Time', 'SimpelTime')">
        </Button>
    </headerContent> 
    <content>
    	<f:SimpleForm minWidth="1024" editable="true" 
            layout="ResponsiveGridLayout" 
            labelSpanL="2" labelSpanM="2" 
            emptySpanL="2" emptySpanM="2"
			columnsL="1" columnsM="1" 
            id="AppGeneration"
            title="Generate new App">
			<f:content>
				<Label text="Name">
				</Label>
				<Input
                    id="iAppName"
                    submit="onGenerate"
                    placeholder="Only 0..9 and a..Z"
				></Input>
				<Label text=""></Label>
				<Button 
					id="bAppGen"
					text="Create App"
					press="onGenerate"
				></Button>
				<!-- maybe delete button -->
			</f:content>
		</f:SimpleForm>
        <List
            id="lLocalApps"
            headerText="Lokal Apps"
            width="100%"
            noDataText="Keine Lokalen Apps gefunden"
            items="{
                path: '/'
            }"
            showNoData="true">
            <items>
                <CustomListItem
                    id="cliLocalApps">
                    <content>
                        <Panel
                            expandable="true">
                            <headerToolbar>
                                <Toolbar>
                                    <Link text="{Name}" 
                                        target="_blank"
                                        href="http://localhost:443/{Name}/webapp/index.html"
                                        class="MasterNameLabel"
                                        width="90%">
                                    </Link>
                                </Toolbar>
                            </headerToolbar>
                            <content>
                                <Button 
                                    visible="{= ${Name} !== 'AppGen' ? true : false}"
                                    text="Add Service"
                                    class="sapUiTinyMargin"
                                    press="onOpenDlg(${Name}, 'Service')">
                                </Button>
                                <Button 
                                    text="Create View"
                                    class="sapUiTinyMargin"
                                    press="onOpenDlg(${Name}, 'View')">
                                </Button>
                                <Button 
                                    text="Add Dialog"
                                    class="sapUiTinyMargin"
                                    press="onOpenDlg(${Name}, 'Dialog')">
                                </Button>
                                <Button 
                                    visible="{= ${Name} !== 'AppGen' ? true : false}"
                                    text="UI5 Build"
                                    class="sapUiTinyMargin"
                                    press="onBuildApp(${Name})">
                                </Button>
                                <Button 
                                    text="Git"
                                    class="sapUiTinyMargin"
                                    press="onOpenDlg(${Name}, ${GitType})">
                                </Button>
                                <Button 
                                    visible="{= ${Name} !== 'AppGen' ? true : false}"
                                    text="Deploy"
                                    class="sapUiTinyMargin"
                                    press="onOpenDlg(${Name}, 'Deploy')">
                                </Button>
                                <Button 
                                    text="Mockdata"
                                    visible="false"
                                    class="sapUiTinyMargin"
                                    press="onNavMockdata(${Name})">
                                </Button>
                            </content>
                        </Panel>
                    </content>
                </CustomListItem>
            </items>
        </List>
    </content>
</Page>
</mvc:View>