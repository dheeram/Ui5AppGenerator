<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Dialog
        id="dlgDialog"
		contentHeight="160px"
		title="Neuer Dialog">
		<content>

            <Label
                text="View"
                class="pad5Proz lmargtop" />
            <Select
                width="90%"
                class="pad5Proz"
                forceSelection="false"
                selectedKey="{Dialog>View}"
                items="{
                    path: 'Dialog>/Views'
                }">
                <core:Item key="{Dialog>Name}" text="{Dialog>Name}" />
            </Select>
            <Label
                text="Dialog Name"
                class="pad5Proz lmargtop" />
            <Input
                width="90%"
                class="pad5Proz"
                value="{Dialog>Dialog}"
                showSuggestion="false">
            </Input>
			
		</content>
		<buttons>
			<Button
				text="BestÃ¤tigen"
                type="Accept"
				press="onCreateDialog"/>
			<Button
				text="Abbrechen"
				press="onCloseDialog"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>