<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Dialog
        id="SimpelTime"
		contentHeight="240px"
		title="SimpelTime">
		<content>
			
            <Label
                text="Break (in minutes)"
                class="pad5Proz lmargtop" />
            <Input
                width="90%"
                value="{Time>Break}"
                class="pad5Proz">
            </Input>
            
            <Label
                text="Start Time"
                class="pad5Proz lmargtop" />
            <TimePicker
                width="90%"
                value="{Time>StartTime}"
                displayFormat="HH:mm"
                class="pad5Proz">
            </TimePicker>
            <Label
                text="End Time"
                class="pad5Proz lmargtop" />
            <TimePicker
                width="90%"
                value="{Time>EndTime}"
                displayFormat="HH:mm"
                class="pad5Proz">
            </TimePicker>
		</content>
		<buttons>
			<Button
				text="WorkingTime"
				press="onEstimate"/>
			<Button
				text="Calculate"
                type="Accept"
				press="onSubmitSimpelTime"/>
			<Button
				text="Close"
				press="onCloseSimpelTime"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>

