<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Dialog
        id="dlgGit"
		contentHeight="80px"
        resizable="true"
		title="Git">
		<content>

            <Label
                text="Commit:"
                class="pad5Proz lmargtop" />
            <Input
                width="90%"
                class="pad5Proz"
                value="{git>Msg}"
                showSuggestion="false">
            </Input>

            <VBox visible="{git>showStatus}"
                class="pad5Proz">
                <items>
                    <Label text="{git>statustitle}"/>
                    <Text text="{git>statustext}"/>
                </items>            
            </VBox>
			
		</content>
		<buttons>
			<Button
				text="Commit and Push"
                type="Accept"
				press="onGitCnP"/>
			<Button
				text="Abbrechen"
				press="onCloseGit"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>