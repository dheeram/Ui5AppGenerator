<mvc:View 
    controllerName="myApps.AppGenerator.controller.Mockdata" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml" 
    displayBlock="true">
	<Page title="{i18n>title}">
		<content>
            <f:SimpleForm minWidth="1024" editable="true" 
                layout="ResponsiveGridLayout" 
                labelSpanL="2" labelSpanM="2" 
                emptySpanL="2" emptySpanM="2"
                columnsL="1" columnsM="1" 
                id="AppGeneration"
                title="Neue App generieren">
                <f:content>
                    <Label text="Name">
                    </Label>
                    <Input
                        id="iAppName"
                        submit="onGenerate"
                    ></Input>
                    <Label text=""></Label>
                    <Button 
                        id="bAppGen"
                        text="Erstellen"
                        press="onGenerate"
                    ></Button>
                    <!-- maybe delete button -->
                </f:content>
            </f:SimpleForm>
        </content>
	</Page>
</mvc:View>