<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Dialog
        id="dlgCreation"
		contentHeight="170px"
		title="Neu anlegen: {creation>Type}">
		<content>

            <Label
                text="{creation>lText1}"
                visible="{creation>at1}"
                class="pad5Proz lmargtop" />
            <Input
                width="90%"
                visible="{creation>at1}"
                class="pad5Proz"
                value="{creation>iValue1}"
                showSuggestion="false">
            </Input>
            <Label
                text="{creation>lText2}"
                visible="{creation>at2}"
                class="pad5Proz lmargtop" />
            <Input
                width="90%"
                visible="{creation>at2}"
                class="pad5Proz"
                value="{creation>iValue2}"
                showSuggestion="false">
            </Input>
			
		</content>
		<buttons>
			<Button
				text="BestÃ¤tigen"
                type="Accept"
				press="submitCreate"/>
			<Button
				text="Abbrechen"
				press="onCloseCreate"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>